# Server Configuration
SERVER_PORT=9091

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
MANAGEMENT_ENDPOINT_HEALTH_PROBES_ENABLED=true
MANAGEMENT_TRACING_ENABLED=true

# Webhook Configuration
WEBHOOK_RAW_DUMP_ENABLED=true
WEBHOOK_RAW_DUMP_DIR=webhook-dumps

# Azure DevOps Configuration
ADO_BASE_URL=https://dev.azure.com/your-org
ADO_PROJECT_ID=your-project-id
ADO_PAT=your-personal-access-token

# PR Changes Dump
ADO_CHANGES_DUMP_ENABLED=true
ADO_CHANGES_DUMP_DIR=ado-pr-changes

# File Dumps
ADO_FILES_DUMP_ENABLED=true
ADO_FILES_DUMP_DIR=ado-pr-files

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_TEMPERATURE=0.2
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Async Executor
SPRING_TASK_EXECUTION_POOL_CORE_SIZE=4
SPRING_TASK_EXECUTION_POOL_MAX_SIZE=8
SPRING_TASK_EXECUTION_POOL_QUEUE_CAPACITY=100

# LLM Logging
LLM_PROMPT_LOG_ENABLED=true
LLM_PROMPT_LOG_DIR=prompt-logs
LLM_RESPONSE_LOG_ENABLED=true
LLM_RESPONSE_LOG_DIR=response-logs

# File Logging
LOGGING_FILE_NAME=logs/azure-pr-reviewer.log
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_TRACING_DEBUG=DEBUG
LOGGING_LEVEL_COM_EXAMPLE_WEBHOOK_LLM_PRREVIEWSERVICE=DEBUG

# OpenTelemetry Configuration
OTLP_ENDPOINT=https://cloud.langfuse.com/api/public/otel/v1/traces
OTLP_AUTH_HEADER=Basic your-base64-encoded-auth-header
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=1.0
MANAGEMENT_TRACING_PROPAGATION_TYPE=b3
MANAGEMENT_OBSERVATIONS_KEY_VALUES_APPLICATION=azure-pr-reviewer-webhook

# Kafka/Confluent Cloud Configuration (for production)
KAFKA_BOOTSTRAP_SERVERS=your-kafka-bootstrap-servers
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username='your-api-key' password='your-api-secret';
KAFKA_TOPIC_AZURE_PR_EVENTS=azure.devops.pr.events

# Docker Compose Environment Variables
# Kafka (for local development)
KAFKA_BOOTSTRAPSERVERS=kafka:29092
KAFKA_TOPIC_AZURE_PR_EVENTS=azure.devops.pr.events

# Azure DevOps (Docker Compose format)
ADO_BASEURL=https://dev.azure.com/your-org
ADO_PROJECTID=your-project-id
ADO_PAT=your-personal-access-token

# Azure OpenAI (Docker Compose format)
SPRING_AI_AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
SPRING_AI_AZURE_OPENAI_API_KEY=your-azure-openai-api-key
SPRING_AI_AZURE_OPENAI_CHAT_OPTIONS_MODEL=gpt-4o-mini
SPRING_AI_AZURE_OPENAI_API_VERSION=2025-01-01-preview

# OTLP Configuration (Docker Compose format)
OTEL_EXPORTER_OTLP_ENDPOINT=https://cloud.langfuse.com/api/public/otel/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic your-base64-encoded-auth-header
